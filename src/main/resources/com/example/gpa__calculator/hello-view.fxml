<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gpa__calculator.HelloController"
            prefWidth="500" prefHeight="350"
            stylesheets="@style.css">

    <center>
        <VBox alignment="CENTER" spacing="20">

            <Label text="Welcome to GPA Calculator"
                   styleClass="header-label"
                   style="-fx-font-size: 30;" />

            <Label text="Click below to begin"
                   styleClass="sub-title"
                   style="-fx-font-size: 16;" />

            <Button fx:id="startButton"
                    text="Start GPA Calculator"
                    onAction="#startGpaCalculator" />

        </VBox>
    </center>

</BorderPane>
