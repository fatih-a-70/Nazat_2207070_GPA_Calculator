<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550" prefWidth="750" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.gpa__calculator.gpa_resultController">

    <top>
        <VBox alignment="CENTER">
            <Label style="-fx-font-size: 34; -fx-padding: 20;" styleClass="header-label" text="ðŸ† GPA Achievement Certificate ðŸ†" />
            <Separator prefWidth="600" />
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">

            <Label style="-fx-font-size: 22;" styleClass="sub-title" text="Course Summary" />

            <TableView fx:id="courseTable" prefHeight="350" prefWidth="650">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="250" text="Course Name" />
                    <TableColumn fx:id="colCredit" prefWidth="250.0" text="Credits" />
                    <TableColumn fx:id="colGrade" minWidth="15.0" prefWidth="250.0" text="Grade" />
                </columns>
            </TableView>

        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 22;" styleClass="sub-title" text="Final GPA:" />
            <Label fx:id="gpaLabel" styleClass="gpa-big" text="0.00" />
        </VBox>
    </bottom>

</BorderPane>
